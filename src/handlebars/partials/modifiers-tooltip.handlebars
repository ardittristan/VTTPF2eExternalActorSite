<div class="hover-content" id="{{uid}}-{{name}}-modifiers">
    <div class="sidebar_title">
        <h2>{{stringify title}}</h2>
    </div>
    <ul class="modifier-list">
        {{#each _modifiers as |modifier|}}
        <li class="item {{#unless modifier.enabled}}no-effect{{/unless}}">
            <span class="tag">
                {{stringify (add 'PF2E.ModifierType.' modifier.type)}}
            </span>
            <span class="label">{{stringify modifier.name}}</span>
            <span class="data">{{numberFormat modifier.modifier decimals=0 sign=true}}</span>
            {{#if modifier.custom}}<i class="far fa-times-circle remove-modifier" data-stat="{{../name}}" data-name="{{modifier.name}}"></i>{{/if}}
        </li>
        {{/each}}
        <li class="item add-modifier">
          <div class="add-modifier-value">
            <input type="number" placeholder="+1">
            <i class="fas fa-plus-circle"></i>
            <i class="fas fa-minus-circle"></i>
          </div>

          <input type="text" class="add-modifier-name" placeholder="Modifier Name">

          <select class="tag add-modifier-type">
              <option value="">Pick a type</option>
              <option value="ability">{{stringify 'PF2E.ModifierType.ability'}}</option>
              <option value="proficiency">{{stringify 'PF2E.ModifierType.proficiency'}}</option>
              <option value="item">{{stringify 'PF2E.ModifierType.item'}}</option>
              <option value="status">{{stringify 'PF2E.ModifierType.status'}}</option>
              <option value="circumstance">{{stringify 'PF2E.ModifierType.circumstance'}}</option>
              <option value="untyped">Untyped (Penalty)</option>
          </select>

          <a class="add-modifier-submit" data-stat="{{name}}">+ Add Modifier</a>
        </li>
    </ul>
</div>
