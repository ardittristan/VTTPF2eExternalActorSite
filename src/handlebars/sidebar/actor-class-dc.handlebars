<div class="sidebar_title">
  <h2>{{{stringify 'PF2E.ClassDCHeader'}}}</h2>
  <h2 class="hover" data-tooltip-content="#{{uid}}-dc-modifiers"><i class="fas fa-eye"></i> Modifiers</h2>
</div>

<div class="roll-data difficulty-checks">
  <h3>{{numberFormat data.attributes.classDC.value decimals=0 sign=false}}</h3>
  <input type="hidden" name="data.attributes.classDC.rank" value="{{data.attributes.classDC.rank}}" data-dtype="Number"
    data-category="proficiency" />
  <h4 class="plaque click-stat-level">
    <span>{{data.attributes.classDC.rankName}}</span>
  </h4>
</div>

<div class="hover-content" id="{{uid}}-dc-modifiers">
  <div class="sidebar_title">
    <h2>Class DC</h2>
  </div>
  <ul>
    {{#each data.attributes.classDC._modifiers as |modifier|}}
      <li class="item {{#unless modifier.enabled}}no-effect{{/unless}}">
        <span class="tag">{{modifier.type}}</span>
        <span class="label">{{stringify modifier.name}}</span>
        <span class="data">{{numberFormat modifier.modifier decimals=0 sign=true}}</span>
      </li>
    {{/each}}
  </ul>
</div>
